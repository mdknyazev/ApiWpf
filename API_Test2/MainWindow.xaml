<Window x:Class="API_Test2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:API_Test2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Grid.Row="0" Name="GetFullName" Click="GetFullName_Click">Получить данные</Button>
        <TextBlock Grid.Row="0" Grid.Column="1" Name="TextBoxFullName"></TextBlock>
        <Button x:Name="SendTestResult" Grid.Column="0" Grid.Row="1" Click="SendTestResult_Click">Отправить результат ответа</Button>
        <TextBlock x:Name="TextBoxResult" Grid.Column="1" Grid.Row="1"></TextBlock>
    </Grid>
</Window>
